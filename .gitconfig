[diff]
    tool = vimdiff
[difftool "nfugitive"]
    cmd = nvim -f -c "Gdiff"
[difftool "vimdiff"]
    cmd = nvim -n -d $LOCAL $REMOTE
[merge]
    tool = vimdiffmerge
[mergetool "vimdiffmerge"]
    cmd = nvim -n -d $LOCAL $MERGED $REMOTE
[push]
	default = current
[pull]
	default = current
    rebase = false
[core]
	editor = nvim
[difftool]
	prompt = false
[color]
	ui = auto
[include]
    path = ~/.local_git_config
[user]
	email = pgrogan@drw.com
	name = Patrick Grogan
