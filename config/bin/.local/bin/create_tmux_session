#!/usr/bin/env bash
if [[ $# -eq 1 ]]; then
    selected=$1
else
    items=()
    items=$(find ~/dotfiles/config/nvim/.config/ ~/workspace -maxdepth 1 -mindepth 1 -type d)
    items+=("$HOME/dotfiles")
    selected=$(printf "%s\n" "${items[@]}" | fzf)
fi

if [[ $selected -eq "" ]]; then
    exit
fi

selected_name=$(basename "$selected" | tr . _)

tmux_running=$(pgrep tmux)

# If we are not in a tmux session already and tmux is not running
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

# If tmux is running, create the session if it does not exists already
if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -s $selected_name -c $selected -d
fi

if [[ -z $TMUX ]]; then
    tmux attach -d -t $selected_name
else
    tmux switch-client -t $selected_name
fi
